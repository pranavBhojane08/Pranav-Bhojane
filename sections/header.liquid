<section class="gift-banner relative bg-white">
  <!-- Top info bar -->
  <div class="info-bar flex justify-between items-center px-6 py-3 text-sm border-b border-gray-200">
    <span>{{ section.settings.top_message }}</span>
    <a href="{{ section.settings.top_button_link }}" 
       class="top-button bg-yellow-300 px-4 py-2 font-medium text-black inline-flex items-center hover:bg-yellow-400 transition">
      {{ section.settings.top_button_text }}
      <span class="ml-2">→</span>
    </a>
  </div>

  <!-- Main content with background -->
  <div class="banner-content relative text-center py-20"
       style="background-image: url({{ section.settings.bg_image | image_url }}); background-repeat: no-repeat; background-size: cover;">
    <h1 class="text-5xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-lg max-w-2xl mx-auto mb-6">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.main_button_link }}"
       class="main-button border border-black px-6 py-3 font-semibold inline-flex items-center hover:bg-black hover:text-white transition">
      {{ section.settings.main_button_text }}
      <span class="ml-2">→</span>
    </a>
  </div>

  <!-- Bottom strip -->
  <div class="bottom-bar text-center text-xs py-3 border-t border-gray-200">
    {{ section.settings.bottom_message }}
  </div>
</section>

<style>
.gift-banner .top-button:hover {
  transform: scale(1.05);
}
.gift-banner .main-button:hover {
  transform: scale(1.05);
}
.gift-banner .main-button:active {
  transform: scale(0.95);
}
</style>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "top_message",
      "label": "Top message",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "top_button_link",
      "label": "Top Button Link",
      "default": "#"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Illustration"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Main Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "main_button_link",
      "label": "Main Button Link",
      "default": "#"
    },
    {
      "type": "text",
      "id": "bottom_message",
      "label": "Bottom message",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
