
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ shop.name }} - Theme Template</title>
  {{ 'https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css' | stylesheet_tag }}
  <style>
    .hero-section {
      background-image: url('https://via.placeholder.com/1920x600'); /* Replace with your hero image */
      background-size: cover;
      background-position: center;
      height: 400px;
    }
    .product-grid img {
      transition: transform 0.3s ease;
    }
    .product-grid img:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body class="font-sans antialiased">
  <!-- Header -->
  <header class="bg-white shadow sticky top-0 z-10">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <div class="text-2xl font-bold">
        {{ shop.name }}
      </div>
      <nav class="space-x-4">
        <a href="/collections/all" class="text-gray-700 hover:text-blue-600">Shop</a>
        <a href="/cart" class="text-gray-700 hover:text-blue-600">Cart</a>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero-section text-white text-center flex items-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to {{ shop.name }}</h1>
      <p class="text-lg md:text-xl mb-6">Discover our curated collection.</p>
      <a href="/collections/all" class="inline-block bg-yellow-500 text-white px-6 py-3 rounded-lg hover:bg-yellow-600">Explore Now</a>
    </div>
  </section>

  <!-- Product Grid -->
  <section class="container mx-auto px-4 py-12">
    <div class="product-grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for product in collections.all.products limit: 8 %}
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="w-full h-48 object-cover">
            <div class="p-4 text-center">
              <h3 class="text-lg font-semibold">{{ product.title }}</h3>
              <p class="text-gray-600">{{ product.price | money }}</p>
            </div>
          </a>
          <form method="post" action="/cart/add" class="p-4">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Add to Cart</button>
          </form>
        </div>
      {% else %}
        <p class="text-center col-span-full">No products available.</p>
      {% endfor %}
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      console.log('Theme template loaded');
    });
  </script>
</body>
</html>
