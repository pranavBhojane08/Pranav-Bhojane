{{ 'banner.css' | asset_url | stylesheet_tag }}
<section class="gift-banner">
  <!-- Top info bar -->
  <div class="info-bar">
    <span>{{ section.settings.top_message }}</span>
    <a href="{{ section.settings.top_button_link }}" class="top-button">
      {{ section.settings.top_button_text }} <span>→</span>
    </a>
  </div>

  <!-- Background image placed below header -->
  <div class="banner-wrapper">
    <div class="banner-image">
      {% if section.settings.bg_image %}
        <img src="{{ section.settings.bg_image | image_url }}" alt="Gift Guide Background" />
      {% endif %}
    </div>

    <!-- Left-aligned content -->
    <div class="banner-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.main_button_link }}" class="main-button">
        {{ section.settings.main_button_text }} <span>→</span>
      </a>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="bottom-bar">
    {{ section.settings.bottom_message }}
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "top_message",
      "label": "Top message",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "top_button_link",
      "label": "Top Button Link",
      "default": "#"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Main Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "text",
      "id": "main_button_link",
      "label": "Main Button Link",
      "default": "#"
    },
    {
      "type": "text",
      "id": "bottom_message",
      "label": "Bottom message",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
